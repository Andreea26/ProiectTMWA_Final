<?xml version="1.0" encoding="utf-8" ?><ContentPage xmlns="http://xamarin.com/schemas/2014/forms"             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             x:Class="ProiectTMWA_Final.Views.AllMovies">    <ContentPage.ToolbarItems>        <ToolbarItem Text="Add Movie" Activated="AddMovie_Activated"/>        <ToolbarItem Text="All Movies" Activated="AllMovies_Activated"/>        <ToolbarItem Text="My Movies" Activated="MyMovies_Activated"/>    </ContentPage.ToolbarItems>
    <ListView x:Name="listView" HasUnevenRows="True">
        <ListView.ItemTemplate>
            <DataTemplate>                <ViewCell>                    <Frame IsClippedToBounds="True" HasShadow="True" Padding="0" BackgroundColor="White">                        <Frame.Margin>                            <OnPlatform x:TypeArguments="Thickness" Android="10" iOS="10" />                        </Frame.Margin>                        <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">                            <Frame HorizontalOptions="FillAndExpand" Margin="0,0,0,0" HasShadow="False" Padding="0">                                <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="Start" Padding="0" Margin="0,0,0,0"  BackgroundColor="Transparent">                                    <Grid.RowDefinitions>                                        <RowDefinition Height="*" />                                    </Grid.RowDefinitions>                                    <Grid.ColumnDefinitions>                                        <ColumnDefinition Width="auto"/>                                        <ColumnDefinition Width="*"/>                                    </Grid.ColumnDefinitions>                                    <StackLayout Grid.Row="0" Grid.Column="0" VerticalOptions="CenterAndExpand" Margin="0,0,0,0">                                        <Frame HasShadow="False">                                            <Image Source="{Binding ImageUrl}" Aspect="Fill"  WidthRequest="90" HeightRequest="90" />                                        </Frame>                                    </StackLayout>                                    <StackLayout Grid.Row="0" Grid.Column="1" Padding="0"  Orientation="Vertical" VerticalOptions="CenterAndExpand">                                        <StackLayout Orientation="Horizontal" >                                            <Label Text="{Binding NameDisplayed}" TextColor="#222" FontSize = "25" VerticalOptions="CenterAndExpand"/>                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">                                            <Button x:Name="add_{Binding IdToDisplay}" Text="Add" FontSize = "14" VerticalOptions="CenterAndExpand"/>                                            <Button x:Name="details_{Binding IdToDisplay}" Text="Show details" FontSize = "14"/>                                        </StackLayout>                                    </StackLayout>                                </Grid>                            </Frame>                        </StackLayout>                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView></ContentPage>



