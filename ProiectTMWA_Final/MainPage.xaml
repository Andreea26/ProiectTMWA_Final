<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectTMWA_Final.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Movie" Activated="AddMovie_Activated">

        </ToolbarItem>

        <ToolbarItem Text="All Movies" Activated="AllMovies_Activated">

        </ToolbarItem>

        <ToolbarItem Text="My Movies" Activated="MyMovies_Activated">

        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ListView x:Name="moviesListView">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding NameDisplayed}" Detail="{Binding StatusDisplayed}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
